<form>
    <h1>Modify Event</h1>
    <h2>Event Details</h2>
    <div class="form-row">
        <div class="form-group col-md">
            <label for="inputEventName">Event Name</label>
            <input type="text" id="inputEventName" class="form-control" placeholder="Name" required>
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md">
            <label for="inputTagline">Tagline</label>
            <input type="text" id="inputTagline" class="form-control" placeholder="Tagline" required>
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label for="inputStartDate">Start Date</label>
            <input type="date" id="inputStartDate" class="form-control" placeholder="Start" required>
        </div>
        <div class="form-group col-md-6">
            <label for="inputEndDate">End Date</label>
            <input type="date" id="inputEndDate" class="form-control" placeholder="End" required>
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label for="inputStartDate">Pre-Reg Opens</label>
            <input type="date" id="inputPreRegOpen" class="form-control" placeholder="Opens" required>
        </div>
        <div class="form-group col-md-6">
            <label for="inputStartDate">Pre-Reg Closes</label>
            <input type="date" id="inputPreRegCloses" class="form-control" placeholder="Closes" required>
        </div>
    </div>
    <div class="form-row">
        <div class="col-md-1">
            <button type="submit" class="btn btn-primary">Save</button>
        </div>
    </div>
</form>
