<form>
    <h1>Modify Organization</h1>
    <div class="form-row">
        <div class="form-group col-md-12">
            <label for="inputOrgName">Name:</label>
            <input type="text" class="form-control" id="inputOrgName" placeholder="Name" required>
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-12">
            <label for="inputOrgShortName">Short Name</label>
            <input type="text" class="form-control" id="inputOrgShortName" placeholder="Short Name" required>
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-12">
            <label for="inputAddress">Address</label>
            <input type="text" class="form-control" id="inputAddress" placeholder="1234 Main St" required>
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-12">
            <label for="inputAddress2">Address</label>
            <input type="text" class="form-control" id="inputAddress2" placeholder="Apt 123">
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-4">
            <label for="inputCity">City</label>
            <input type="text" class="form-control" id="inputCity" required>
        </div>
        <div class="form-group col-md-2">
            <label for="inputState">State</label>
            <select id="inputState" class="form-control" required>
                <option selected>Choose...</option>
                <option>...</option>
            </select>
        </div>
        <div class="form-group col-md-2">
            <label for="inputCountry">Country</label>
            <select id="inputCountry" class="form-control" required>
                <option selected>Choose...</option>
                <option>...</option>
            </select>
        </div>
        <div class="form-group col-md-4">
            <label for="inputPostal">Postal</label>
            <input type="text" class="form-control" id="inputPostal" required>
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md">
            <label for="inputPaypal">Paypal Details</label>
            <input type="text" id="inputPayPal" class="form-control" required>
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md">
            <label for="inputSquare">Square Details</label>
            <input type="text" id="inputSquare" class="form-control" required>
        </div>
    </div>
    <div class="form-row">
        <div class="col-md-1">
            <a href="/dashboard/organization" class="btn btn-primary">Update</a>
        </div>
    </div>
</form>
